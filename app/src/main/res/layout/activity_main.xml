<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="16dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="100dp"
    android:background="@drawable/bg"
    tools:context="com.example.ad_forwarding_system.MainActivity">

    <ImageButton
        android:id="@+id/StartScanButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@null"
        android:scaleType = "centerInside"
        app:srcCompat="@drawable/start_scan"
        tools:ignore="RtlSymmetry"
        />

    <ImageButton
        android:id="@+id/StopScanButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@null"
        android:scaleType = "centerInside"


        app:srcCompat="@drawable/stop_scan"
        />


    <ImageButton
        android:id="@+id/StartAdvButton"
        android:layout_width="120dp"
        android:layout_height="120dp"

        android:layout_marginTop="180dp"

        android:layout_gravity="center|center_horizontal"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@null"
        app:srcCompat="@drawable/start_forward"
        android:scaleType = "centerInside"/>

    <ImageButton
        android:id="@+id/StopAdvButton"
        android:layout_width="120dp"
        android:layout_height="120dp"

        android:layout_marginTop="180dp"

        android:layout_gravity="center|center_horizontal"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toBottomOf="@+id/StartAdvButton"
        android:background="@null"
        app:srcCompat="@drawable/stop_forward"
        android:scaleType = "centerInside"/>

    <ImageButton
        android:id="@+id/scan_list"
        android:layout_width="120dp"
        android:layout_height="120dp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:background="@null"
        app:srcCompat="@drawable/list"
        android:scaleType = "centerInside"/>

    <TextView
        android:id="@+id/PeripheralTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="500dp"
        android:layout_marginBottom="40dp"
        android:textSize="20sp"
        android:typeface="serif"
        android:maxLines="30"
        android:scrollbars="vertical" />




